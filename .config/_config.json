{
  "vars": {
    "routerport": 8443,
    "ciport": 7501,
    "logport": 7502,
    "logbackendport": 7503,
    "dashboardport": 7504
  },
  "processes": {
    "router": {
      "script": "./.build/router.js",
      "args": {
        "port": "${routerport}",
        "http_redirect": "8080->443",
        "routes": {
          "^.*?/admin": "${dashboardport}"
        },
	"host": "::1"
      }
    },
    "log": {
      "script": "./.build/logserver.js",
      "args": [
        "${logport}",
        "${logbackendport}"
      ]
    },
    "dashboard": {
      "script": "./.build/dashboard.js",
      "args": {
        "dashboardport": "${dashboardport}",
        "ciport": "${ciport}",
        "logbackendport": "${logbackendport}",
        "token": "abc123"
      }
    }
  },
  "webhooks": {
    "adabru-server": {
      "token": "123",
      "path": "."
    }
  }
}
